<core:GameLauncherBaseControl
    x:Class="Game_Launcher.Views.Cubical"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:core="clr-namespace:Game_Launcher.Core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <Grid Background="#141c25">
        <TextBlock Name="Welcome" Text="Welcome to Cubical, Click the play button to play." Foreground="White"
                   Height="30" Width="400" VerticalAlignment="Top" HorizontalAlignment="Center"
                   TextAlignment="Center" Margin="0,10,0,0"/>

        <Button Name="Play_Button" Content="PLAY" Click="PlayButton_Click" FontSize="20" FontWeight="Normal" Foreground="White" HorizontalAlignment="Left" Margin="20,0,0,10" VerticalAlignment="Bottom" Background="#FF006DFF" Height="70">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF006DFF"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF003984"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="180" Height="65" CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <Button x:Name="OptionsButton" Content="⋮"
        FontSize="25" Width="40" Height="40"
        HorizontalAlignment="Left" VerticalAlignment="Bottom"
        Margin="205,0,0,24"
        Background="Transparent"
        BorderThickness="0"
        FontWeight="Normal" Foreground="White"
        Click="OptionsButton_Click">
            <Button.ContextMenu>
                <ContextMenu x:Name="OptionsMenu">
                    <MenuItem Header="Verify Game Files" Click="VerifyGameFiles_Click"/>
                    <MenuItem Header="Uninstall" Click="Uninstall_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>

        <ProgressBar x:Name="Download_ProgressBar" Height="20" Width="437"
                     Foreground="#DD67FF15" Background="#0074e0" Margin="266,0,0,32"
                     VerticalAlignment="Bottom" HorizontalAlignment="Left" Visibility="Hidden"/>

        <TextBlock x:Name="Progress_Label" Text="%0" Height="16" Width="62"
                   Foreground="#DDFFFFFF" Margin="430,0,0,34"
                   VerticalAlignment="Bottom" HorizontalAlignment="Left"
                   FontFamily="Arial" FontSize="15" TextAlignment="Center" Visibility="Hidden"/>
    </Grid>
</core:GameLauncherBaseControl>