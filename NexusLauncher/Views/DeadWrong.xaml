<core:GameLauncherBaseControl
    x:Class="Game_Launcher.Views.DeadWrong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:core="clr-namespace:Game_Launcher.Core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF424242" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image Name="Logo" Source="/Images/DeadWrongLogoNoBG.png" Height="160" Width="160" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
        <Button Name="Play_Button" Content="PLAY" Click="PlayButton_Click" FontSize="20" FontWeight="Normal" Foreground="White" HorizontalAlignment="Left" Margin="20,0,0,10" VerticalAlignment="Bottom" Background="#66000000" Height="70">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#66000000"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#33000000"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="180" Height="65" CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <Button x:Name="OptionsButton" Content="⋮"
FontSize="25" Width="40" Height="40"
HorizontalAlignment="Left" VerticalAlignment="Bottom"
Margin="205,0,0,24"
Background="Transparent"
BorderThickness="0"
FontWeight="Normal" Foreground="White"
Click="OptionsButton_Click">
            <Button.ContextMenu>
                <ContextMenu x:Name="OptionsMenu">
                    <MenuItem Header="Verify Game Files" Click="VerifyGameFiles_Click"/>
                    <MenuItem Header="Uninstall" Click="Uninstall_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>

        <ProgressBar x:Name="Download_ProgressBar" Height="20" Width="437"
             Foreground="#DD67FF15" Background="#0074e0" Margin="266,0,0,32"
             VerticalAlignment="Bottom" HorizontalAlignment="Left" Visibility="Visible"/>

        <TextBlock x:Name="Progress_Label" Text="%0" Height="16" Width="62"
           Foreground="#DDFFFFFF" Margin="430,0,0,34"
           VerticalAlignment="Bottom" HorizontalAlignment="Left"
           FontFamily="Arial" FontSize="15" TextAlignment="Center" Visibility="Visible"/>

        <Button x:Name="Discord"
            FontSize="25" Width="68" Height="46"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Background="Transparent"
            BorderThickness="0"
            FontWeight="Normal" Foreground="DarkGray"
            Margin="0,0,1,0"
            Click="DiscordButton_Click" >
            <Image Source="/Images/discordlogo.png"></Image>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#66000000"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#33000000"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="68" Height="46" CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</core:GameLauncherBaseControl>
