<Window x:Class="Game_Launcher.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="220"
        Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Foreground="White"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="12" Background="#FF141C25">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <TextBlock Text="Launcher Settings"
                   FontSize="20"
                   FontWeight="SemiBold"/>

            <!-- INSTALL PATH -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Game Install Location"
                       Margin="0,0,0,6"/>

                <DockPanel>
                    <TextBox x:Name="InstallPathTextBox"
                         IsReadOnly="True"
                         Background="#1E2733"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="8"
                         DockPanel.Dock="Left"
                         Width="450"/>

                    <Button Style="{StaticResource FlatButton}"
                        Content="Browse…"
                        Width="90"
                        Margin="10,0,0,0"
                        Click="Browse_Click"/>
                </DockPanel>

                <TextBlock x:Name="DiskSpaceLabel"
           Margin="0,8,0,0"
           Foreground="Gray"/>

            </StackPanel>

            <!-- FOOTER -->
            <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Style="{StaticResource FlatButton}"
                    Content="Done"
                    Width="90"
                    Height="25"
                    Margin="0,10,0,0"
                    Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>