<Window x:Class="Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Launcher"
        xmlns:viewmodels="clr-namespace:Game_Launcher.ViewModels"
        xmlns:views="clr-namespace:Game_Launcher.Views"
        mc:Ignorable="d"
        Title="Launcher"
        Height="576" Width="1080"
        MinHeight="576" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        MouseDown="Window_MouseDown">
    
    <Window.Resources>
        <DataTemplate x:Name="GamesViewTemplate" DataType="{x:Type viewmodels:GamesViewModel}">
            <views:Games DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="HomeViewTemplate" DataType="{x:Type viewmodels:HomeViewModel}">
            <views:Home DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="NewsViewTemplate" DataType="{x:Type viewmodels:NewsViewModel}">
            <views:News DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="1" Content="{Binding}"/>

        <Grid Grid.ColumnSpan="7" Background="#FF141C25" Name="MenuGrid">

            <Button x:Name="LogoButton"
                    HorizontalAlignment="Left"
                    Height="50" Width="60"
                    Margin="50,0,0,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="LogoButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/nexus.png"/>
                    <TextBlock Text="⌄" FontSize="15" VerticalAlignment="Center" Foreground="White"></TextBlock>
                </StackPanel>
                <Button.ContextMenu>
                    <ContextMenu x:Name="LogoOptionsMenu">
                        <MenuItem Header="Settings" Click="Settings_Click"/>
                        <MenuItem x:Name="UpdateLauncherMenuItem" Header="Update Launcher" Click="Update_Click" Visibility="Collapsed"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            

            <StackPanel Margin="115,0,0,0" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type RadioButton}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="GroupName" Value="MenuButtons"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Margin" Value="50,0,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type RadioButton}">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <Rectangle Name="indicator" Width="Auto" Height="2.2" Grid.ColumnSpan="2" Margin="0,30,0,0"/>

                                            <TextBlock x:Name="TabName" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Grid.Column="1" Text="{TemplateBinding Content}" TextTrimming="WordEllipsis" Foreground="{TemplateBinding Foreground}" FontWeight="{TemplateBinding FontWeight}" FontSize="{TemplateBinding FontSize}"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="indicator" Property="Shape.Fill" Value="#148eff"/>
                                            <Setter TargetName="TabName" Property="Foreground" Value="White"/>
                                        </Trigger>

                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard SpeedRatio="5">
                                                        <ColorAnimation Storyboard.TargetProperty="(RadioButton.Foreground).Color" From="Gray" To="White"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard SpeedRatio="5">
                                                        <ColorAnimation Storyboard.TargetProperty="(RadioButton.Foreground).Color" From="White" To="Gray"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <RadioButton Content="HOME" Click="HomeButton_Click" Height="50" IsChecked="True"/>
                <RadioButton Content="GAMES" Click="GamesButton_Click" Height="50" Margin="20,0,0,0"/>
                <RadioButton Content="NEWS" Click="NewsButton_Click" Height="50" Margin="20,0,0,0"/>
            </StackPanel>
        </Grid>

        <Button x:Name="btnMinimize" Content="—" Foreground="White" FontSize="16" FontFamily="Montserrat" Cursor="Hand" Grid.Column="2" Height="20" VerticalAlignment="Top" Click="btnMinimize_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <Button x:Name="btnFullscreen" Content="🗖" Foreground="White" FontSize="16" FontFamily="Montserrat" Cursor="Hand" Grid.Column="3" Height="20" VerticalAlignment="Top" Click="btnFullscreen_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <Button x:Name="btnClose" BorderThickness="0" Content="✖" Foreground="White" FontSize="16" FontFamily="Montserrat" Cursor="Hand" Grid.Column="4" Height="20" VerticalAlignment="Top" Click="btnClose_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
