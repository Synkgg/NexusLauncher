<UserControl x:Class="Game_Launcher.Views.News"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FF141C25">
        <TextBlock Text="Updates" Foreground="White" FontSize="25" Margin="10,10,0,0"/>
        <Separator VerticalAlignment="Top" Margin="25,62,25,0" Height="22"/>

        <ScrollViewer Margin="10,100,10,10" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="UpdatesStack" Orientation="Vertical" Margin="20,0,20,0">

                <Border Background="#FF1E2735" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="Patch 1.0.2" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="1/28/2026" Foreground="LightGray" FontSize="14" Margin="0,2,0,5"/>
                        <TextBlock Text="Addded Needed features" Foreground="White" FontSize="16" Margin="0,0,0,5"/>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="• Settings for selecting custom download path" Foreground="White" FontSize="14"/>
                            <TextBlock Text="• Ability to find/locate the game." Foreground="White" FontSize="14"/>
                            <TextBlock Text="• Fixed minor bugs" Foreground="White" FontSize="14"/>
                            <TextBlock Text="• Updated backend to use less resources and make it faster" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#FF1E2735" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="Patch 1.0.1" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="1/26/2026" Foreground="LightGray" FontSize="14" Margin="0,2,0,5"/>
                        <TextBlock Text="QOL Updates" Foreground="White" FontSize="16" Margin="0,0,0,5"/>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="• Added Launcher Updating" Foreground="White" FontSize="14"/>
                            <TextBlock Text="• Improved UI" Foreground="White" FontSize="14"/>
                            <TextBlock Text="• Fixed minor bugs" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#FF1E2735" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="Patch 1.0.0" Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="1/24/2026" Foreground="LightGray" FontSize="14" Margin="0,2,0,5"/>
                        <TextBlock Text="Initial Release" Foreground="White" FontSize="16" Margin="0,0,0,5"/>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="• Implemented launcher" Foreground="White" FontSize="14"/>
                            <TextBlock Text="• Fixed minor bugs" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
